{
	"type": "Themes",
	"color": {
		"default": "#000000",
		"clear": "clear",
		"black": "#293551",
		"appBase": "#F8F8F8",
		"navBar": "#293551",
		"appWhite": "#F8F8F8",
        "halfBlack": "#9A9A9A99",
        "arrow": "#666666",
		"blue": "#1059ce",
		"green": "#2CA4BF",
		"yellow": "#cecb10",
		"white": "#E8E8E8",
		"gray": "#A2A2A2"
	},
    "layer": {
        "roundButton" : {
            "cornerRadius": 22
        },
        "elevatedGrey": {
            "masksToBounds": false,
            "shadowPath": true,
            "shadowColor": "navBar",
            "shadowRadius": 1.0,
            "shadowOpacity": 0.35
        }
    },
	"font": {
		"default": {
			"name": "system",
			"size": "13.0"
		},
        "bold": {
            "name": "boldSystem",
            "size": "17.0"
        },
		"system14": {
			"_super": "default",
			"size": "14.0"
		},
		"system17": {
			"_super": "default",
			"size": "17.0"
		},
        "bold17": {
            "name": "boldSystem",
            "size": "17.0"
        }
	},
    "link": {
        "url": {
            "underlineColor": "blue",
            "foregroundColor": "blue"
        },
        "hash": {
            "underlineColor": "blue",
            "foregroundColor": "blue"
        }
    },
	"appearance": {
		"UIStatusBar": {
			"tintColor": "white"
		},
		"UINavigationBar:UINavigationController": {
			"barTintColor": "white",
			"tintColor": "white",
			"isTranslucent": false,
			"backgroundImage": {
				"default": "@Pixel",
				"landScape": "@Pixel"
			},
			"shadowImage": "@empty",
			"titleText": {
				"foregroundColor": "white"
			}
		},
		"UIToolbar:UINavigationController": {
			"barTintColor": "white",
			"isTranslucent": false
		}
	},
	"components": {
		"FTView": {
			"default": {
				"backgroundColor": "appWhite"
			},
            "clearView": {
                "backgroundColor": "clear"
            },
            "halfView": {
                "backgroundColor": "halfBlack"
            }
		},
        "UIView": {
            "default": {
                "backgroundColor": "appWhite"
            },
            "underline": {
                "backgroundColor": "green"
            }
        },
        "RecentNovelCollectionViewCell": {
            "default": {
                "layer": "elevatedGrey"
            }
        },
        "NovelCollectionViewCell": {
            "default": {
                "layer": "elevatedGrey"
            }
        },
        "SectionHeaderView": {
            "default": {
                "backgroundColor": "appWhite"
            }
        },
        "UICollectionView": {
            "default": {
                "backgroundColor": "clear"
            },
            "halfView": {
                "backgroundColor": "appWhite",
                "backgroundViewTheme": "default"
            }
        },
		"SegmentCollectionHeaderView": {
			"default": {
				"backgroundColor": "navBar"
			}
		},
        "SearchBarHeaderView": {
            "default": {
                "backgroundColor": "navBar"
            }
        },
        "UISearchBar": {
            "default": {
                "textcolor": "white",
                "tintColor": "white",
                "barTintColor": "navBar"
            }
        },
        "UISegmentedControl": {
           "default": {
               "tintColor": "white",
               "iOS12Style": true,
               "ios_13": {
                   "tintColor": "navBar",
                   "textcolor": "white"
               }
           }
        },
		"UIButton": {
			"default": {
				"textfont": "system14",
				"textcolor": "black",
				"backgroundColor": "clear"
			},
			"button14R": {
				"_super": "default",
				"textcolor": "appBase"
			},
			"button14R:highlighted": {
				"_super": "default",
				"textcolor": "green"
			},
			"button14R:disabled": {
				"_super": "default",
				"textcolor": "yellow"
			},
            "buttonR17bW": {
                "textfont": "bold17",
                "textcolor": "white",
                "backgroundColor": "appBase"
            },
            "segment": {
                "_super": "default",
                "textfont": "system17",
                "textcolor": "gray"
            },
            "segment:selected": {
                "textfont": "bold17",
                "textcolor": "white"
            },
			"googleButton": {
				"_super": "default",
				"image": "@google",
				"backgroundColor": "white",
				"layer": "roundButton"
			}
		},
		"UILabel": {
			"default": {
				"textfont": "system14",
				"textcolor": "black",
				"backgroundColor": "clear",
				"isLinkUnderlineEnabled": true,
				"isLinkDetectionEnabled": true
			},
			"system13Gray": {
				"_super": "default",
				"textcolor": "gray"
			},
			"system17R": {
				"_super": "default",
				"textfont": "system17",
				"textcolor": "black"
			},
			"selectionCell": {
				"_super": "default",
                "textfont": "system17",
				"textcolor": "black"
			},
            "selectionCell:disabled": {
                "_super": "default",
                "textcolor": "gray"
            }
		}
	}
}
